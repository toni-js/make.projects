@import url('https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&subset=latin-ext');

body, html, *
  margin 0
  padding 0
  font-family: 'Raleway', sans-serif;

body
  width 100%

ul 
  list-style none

a
  text-decoration none

fieldset
  border none
  padding 20px 0

.row
  width 100%
  display flex
  flex-wrap wrap
  & .col-12
    width 100%
  & .col-11
    width 91.66%
  & .col-10
    width 83.33%
  & .col-9
    width 75%
  & .col-8
    width 66.66%
  & .col-7 
    width 58.33%
  & .col-6
    width 50%
  & .col-5
    width 41.66%
  & .col-4
    width 33.33%
  & .col-3
    width 25%
  & .col-2
    width 16.66%
  & .col-1
    width 8.33%
  &::after
    display block
    content ""
    clear both

.main-container
  display grid
  grid-template-areas: 
  "header"\
  "content"\
  "footer"
  grid-template-columns 100%
  & > header 
    grid-area header
  & > main
    grid-area content
  & > footer
    grid-area footer